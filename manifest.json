{
	"manifest_version": 2,
	"name": "Song Lyric",
	"version": "0.1",
	"background": {
		"scripts": ["background.js"]	
		},
	"content_scripts": [
	 {
	 	"matches": [
	 	"<all_urls>"
	 	],
	 	"js": ["content.js"]
	 }
	],

	"browser_action": {
		"default_icon": "music.png",
		"default_popup": "popup.html",
		"default_title": "A popup will come here."
	}
}